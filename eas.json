{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "android": {
        "buildType": "app-bundle"  // <-- add this
      },
      "autoIncrement": true,
      "env": {
        "NODE_ENV": "production"
      },
      "distribution": "store"     // <-- ensures it's for Play Store
    }
  },
  "submit": {
    "production": {}
  }
}
